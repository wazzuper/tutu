<%= form_for [:admin, railway_station], html: { style: "display: #{hidden ? 'none' : 'block'}"} do |f| %>
  <%= render 'common/errors', resource: railway_station %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="actions">
    <%= f.submit t('.sumbit', action: railway_station.new_record? ? t('common.create') : t('common.edit')) %>
  </div>
<% end %>
