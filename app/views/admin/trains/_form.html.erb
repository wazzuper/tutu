<%= form_for [:admin, @train] do |f| %>
  <%= render 'common/errors', resource: @train %>

  <div class="field">
    <%= f.label :number %>
    <%= f.text_field :number %>
  </div>

  <div class="field">
    <%= f.label :current_station %>
    <%= f.collection_select :current_station_id, RailwayStation.all, :id, :title %>
  </div>

  <div class="field">
    <%= f.label :route %>
    <%= f.collection_select :route_id, Route.all, :id, :name %>
  </div>

  <div class="field">
    <%= f.label :sort_wagon %>
    <%= f.check_box :sort_wagon %>
  </div>

  <div class="actions">
    <%= f.submit t('.submit', action: @train.new_record? ? t('common.create') : t('common.edit')) %>
  </div>
<% end %>
