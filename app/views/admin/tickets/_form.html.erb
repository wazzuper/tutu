<%= form_for [:admin, @ticket] do |f| %>
  <%= render 'common/errors', resource: @ticket %>

  <%= f.hidden_field :train_id %>
  <%= f.hidden_field :first_station_id %>
  <%= f.hidden_field :last_station_id %>

  <div class="field">
    <%= f.label :fio, 'ФИО' %>
    <%= f.text_field :fio %>
  </div>

  <div class="field">
    <%= f.label :document, 'Паспортные данные' %>
    <%= f.text_field :document %>
  </div>

  <%= f.submit "#{@ticket.new_record? ? 'Купить' : 'Обновить' }" %>
<% end %>