<%= form_for(@ticket) do |f| %>
  <%= render 'common/errors', resource: @ticket %>

  <div class="field">
    <%= f.label :fio, 'ФИО' %>
    <%= f.text_field :fio %>
  </div>

  <div class="field">
    <%= f.label :document, 'Паспортные данные' %>
    <%= f.text_field :number %>
  </div>

  <%= f.submit 'Купить' %>
<% end %>